@model AddOrderViewModel

<h1 style="padding-bottom:20px" class="text-center fst-italic">Add Order</h1>

<div class="mx-auto p-4 shadow-lg w-50 rounded">

            <form asp-controller="Order" asp-action="MakeOrder" method="post">
                <div class="mb-1 form-group ">
                    <label asp-for="Name" class="form-label fs-5 fst-italic"> </label>
                    <input asp-for="Name" class="form-control ">
                    <span class="text-danger fst-italic" asp-validation-for="Name"></span>
                </div>
                <div class="mb-1 form-group ">
                    <label asp-for="PhoneNumber" class="form-label fs-5 fst-italic"></label>
                    <input asp-for="PhoneNumber" class="form-control ">
                    <span class="text-danger fst-italic" asp-validation-for="PhoneNumber"></span>
                </div>
                <div class="mb-1 form-group ">
                    <label asp-for="Address" class="form-label fs-5 fst-italic"></label>
                    <input asp-for="Address" class="form-control ">
                    <span class="text-danger fst-italic" asp-validation-for="Address"></span>
                </div>
                <div class="mb-1 form-group ">
                    <label asp-for="Email" class="form-label fs-5 fst-italic"></label>
                    <input asp-for="Email" class="form-control ">
                    <span class="text-danger fst-italic" asp-validation-for="Email"></span>
                </div>
                @*
                 <div class="mb-1 form-group ">
                     <label asp-for="OrderDate" class="form-label fs-5 fst-italic"> </label>
                     <input asp-for="OrderDate" class="form-control ">
                     <span class="text-danger fst-italic" asp-validation-for="OrderDate"></span>
                 </div>
                *@
                <div class="d-grid gap-2   pt-1">
                    <button type="submit" class="btn btn-primary  fst-italic ">Make Order</button>
                </div>
            </form>
  <div class="d-flex justify-content-end">

    <div class="mt-1 d-grid gap-2  col-4 pt-4">
            <a asp-controller="Cart" asp-action="ItemInCart" class="btn btn-success mb-1">Back to Cart</a>
    </div>
 </div>
 </div>

